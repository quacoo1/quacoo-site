---
import Navigation from './Navigation.astro';
---

<header>
  <div class="top">
	<div class="logo">Q<span class="trailing">uacoo</span></div>
  </div>
  
  <Navigation />
</header>

<style lang="scss">
	header{	
		position: sticky;
		top: -3rem;
		display: flex;
    	flex-direction: column;
    	align-items: center;
    	gap: var(--size-7);
		padding: var(--size-3) var(--size-7);
	}

	
	.logo{
		position: relative;
		font-family: 'Kyiv Serif';
		font-size: var(--font-size-4);
  		font-variation-settings: 'wght' 1000, 'CONT' 850, 'MIDL' -1000 ;
		color: var(--gray-3);
		&::after{
			content: "";
			position: absolute;
			top:50%;
			left: 0;
			transform: translate(-25%, -45%);
			width:1.5em;
			height:1.5em;
			border-radius:50% ;
			background-color: var(--green-10);
			opacity: 0.5;
			z-index: -1;
		}
	}

  

